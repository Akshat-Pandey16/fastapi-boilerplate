# Database Configuration
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=fastapi_db
DB_HOST=localhost
DB_PORT=5432
DB_ECHO=true
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=300

# API Configuration
API_TITLE=FastAPI Boilerplate
API_DESCRIPTION=A production-ready FastAPI boilerplate with async PostgreSQL
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
CORS_ALLOW_ORIGINS=127.0.0.1, 192.168.0.100
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET, POST, PUT, DELETE, PATCH, OPTIONS, HEAD
CORS_ALLOW_HEADERS=*

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
